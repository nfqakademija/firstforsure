                    <input  name='active[{{ position.id }}]' type="checkbox" style="display:none"  id="fancy-checkbox-success{{ position.id }}" autocomplete="off" />
                    <div class="[ btn-group ]">
                        <label for="fancy-checkbox-success{{ position.id }}" class="[ btn btn-success ]">
                            <span class="[ glyphicon glyphicon-ok ]"></span>
                            <span>Â </span>
                        </label>
                        <label  for="fancy-checkbox-success{{ position.id }}" class="[ btn btn-default active ]">
                            {{ position.name }}
                        </label>
                        <input name='count[{{ position.id }}]' type="text"/>
                    </div>
                </div>



            </div>
        {% endfor %}
        <input type="submit" value="Submit">
    </form>
    </div>
{% endblock %}