    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/perfect-scrollbar/perfect-scrollbar.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/css/main.css">






    <body>


    <section>
        <div class="row">
            <h2 class="text-center"><span>Tapk Zalgirio remeju jau siandien!</span>{{ offer.message }}</a></h2>
            <div class="container">
                {% include "admin/offer/progressbar.html.twig" with {'selected': 3} %}

                <ul class="list-group super-list">
                    {% for msg in messages %}
                        <li class="list-group-item {% if msg.username == "MANAGER" %} manager-message {% endif %}}">
                            <div class="row">
                                <div class="col-lg-10 col-sm-10">
                                    <h5 class="super-list-title"><i class="fa fa-child"></i>{{ msg.username }}</h5>
                                </div>
                                <div class="col-lg-2 col-sm-2 comment-time">
                                    <h6 class="super-list-title" style=""><i class="fa fa-calendar-plus-o "></i>2018-08-12 13:13</h6>
                                </div>
                                <div class="col-lg-12" style="text-align=right; float:right; color:grey">
                                    <p>

                                        {{ msg.text }}
                                    </p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>

                <form action="/offer/client_response" method="post">
                    <div class="form-group offer-comment">
                        <label for="exampleFormControlTextarea1">Komentaras</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="msg" rows="3"></textarea>
                        <button type="submit"
                                id="btn-check-offers" name="accept" value="{{ offerTemplate.id }}"
                                class="btn btn-secondary btn-lg btn-block btn-accept">Atsakyti
                        </button>
                        <input type="hidden" value="{{ offer.id }}" name="orderId">
                        <input type="hidden" value="{{ offer.clientName }}" name="username">

                    </div>

                </form>
                <div class="summary">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h2 class="card-title"><i class="fa fa-money fa-3x"> </i></h2>
                                        </div>
                                        <div class="col-sm-6" style="text-align:right">
                                            <h3 class="card-title left">{{ offerTemplate.template.price |number_format(0, '.') }}€ </h3>
                                            <p class="card-title left" style="color:grey">Kaina</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h2 class="card-title"><i class="fa fa-street-view fa-3x"> </i>I</h2>
                                        </div>
                                        <div class="col-sm-6" style="text-align:right">
                                            <h3 class="card-title left">{{ offerTemplate.template.reach |number_format(0, '.') }} </h3>
                                            <p class="card-title left" style="color:grey">Perziuros</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <h2 class="card-title"><i class="fa fa-eye"> </i>I</h2>
                                        </div>
                                        <div class="col-sm-6" style="text-align:right">
                                            <h3 class="card-title left">{{ offerTemplate.template.divide() |round(2, 'floor') }}€</h3>
                                            <p class="card-title left" style="color:grey">Perziuros kaina</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <ul class="list-group super-list">
                    {% for offerTemplatePosition in offerTemplate.offerPositionTemplates %}

                        <li class="list-group-item">

                            <div class="row">
                                <div class="col-lg-6 col-sm-12">
                                    <h5 class="super-list-title">{{ offerTemplatePosition.position.name }}</h5>
                                </div>
                                <div class="col-lg-2 col-sm-4 col-xs-4"
                                     style="text-align=right; float:right; color:grey">
                                    <span><i class="fa fa-cart-plus"></i>{{ offerTemplatePosition.count }}</span>
                                </div>
                                {% set totalprice =  offerTemplatePosition.price * offerTemplatePosition.count  %}
                                <div class="col-lg-2 col-sm-4 col-xs-4"
                                     style="text-align=right; float:right; color:grey">
                                    <span><i class="fa fa-money"></i>{{ totalprice|number_format(0, '.')  }}€</span>
                                </div>
                                {% set totalviews =  offerTemplatePosition.position.reach *offerTemplatePosition.count   %}
                                <div class="col-lg-2 col-sm-4 col-xs-4"
                                     style="text-align=right; float:right; color:grey">
                                    <span><i class="fa fa-eye"></i>{{ totalviews|number_format(0, '.')  }}</span>
                                </div>
                            </div>
                        </li>
                    {% endfor %}

                </ul>

            </div>
        </div>
        <br/>

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <button type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false"
                            aria-controls="collapseExample"
                            class="btn btn-secondary btn-lg btn-block btn-more">Kitos siulomos pozicijos
                    </button>
                </div>
            </div>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <ul class="list-group super-list">
                        {% include('admin/order/positions_table.html.twig') with {'otherPositions': otherPositionsTime} %}
                        {% include('admin/order/positions_table.html.twig') with {'otherPositions': otherPositionsNoTime} %}
                    </ul>
                </div>
            </div>

        </div>


    </section>

    {%include "admin/offer/footer.html.twig" %}



    </body>

{% endblock %}