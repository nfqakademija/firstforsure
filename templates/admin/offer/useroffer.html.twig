    <section>



        <div class="row">
            <h2 class="text-center"><span>Tapk Zalgirio remeju jau siandien!</span>{{ offer.message }}</a></h2>
            <div class="container">
                {%include "admin/offer/progressbar.html.twig" with {'selected': 1}  %}
                <div class="col-md-8 offset-md-2">
                    <div class="bd-example" data-example-id="">
                        <div id="accordion" role="tablist" aria-multiselectable="true">
                            {% for offerTemplate in offer.offerTemplates %}
                            <div class="card">
                                <div class="card-header" role="tab" id="headingOne">
                                    <div class="mb-0">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#{{ offerTemplate.template.id }}" aria-expanded="false" aria-controls="collapseOne" class="collapsed">
                                            <i class="fa fa-file-text-o" aria-hidden="true"></i>
                                            <h3>{{ offerTemplate.template.title }}</h3>
                                            <p>{{ offerTemplate.template.price }}</p>
                                        </a>
                                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                                    </div>
                                </div>

                                <div id="{{ offerTemplate.template.id }}" class="collapse" role="tabpanel" aria-labelledby="headingOne" aria-expanded="false" style="">
                                    <div class="card-block">
                                        <div id="no-more-tables">
                                            <table class="col-md-12 table-bordered table-striped table-condensed cf">
                                                <thead class="tableHead">
                                                <tr>
                                                    <th>POZICIJA</th>
                                                    <th class="numeric">KIEKIS</th>
                                                    <th class="numeric">KAINA</th>
                                                    <th class="numeric">PERZIUROS</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for offerTemplatePosition in offerTemplate.offerPositionTemplates %}

                                                <tr>
                                                    <td class="tdContent" data-title="Pozicija">{{ offerTemplatePosition.position.name }}</td>
                                                    <td class="tdContent"  data-title="Kiekis">{{ offerTemplatePosition.count }}</td>
                                                    <td  class="tdContent" data-title="Kaina" class="numeric">{{ offerTemplatePosition.price }}</td>
                                                    <td  class="tdContent" data-title="Perziuros" class="numeric">{{ offerTemplatePosition.position.reach }}</td>
                                                </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                            <a class="ChooseButton" href="{{ path("chooseoffer", {"id": offerTemplate.id, "md5": offer.md5} ) }}" >RINKTIS</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}



                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>




    <div class="footer footeris">
        Copyright FirstForSure
        </div>

</body>

















    {% for offerTemplate in offer.offerTemplates %}
        <div id="{{ offerTemplate.template.id }}" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
             aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="offer-container">
                    <div class="panel panel-primary" align="center">
                        <div class="panel-heading">
                            <h2>
                                <i class="fa fa-calculator"></i>{{ offerTemplate.template.title }}</h2>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-striped plansTable">
                                        <thead>
                                        <tr>
                                            <th>
                                                Kiekis
                                            </th>
                                            <th>
                                                Produktas
                                            </th>
                                            <th>
                                                Kaina
                                            </th>
                                            <th>
                                                Peržiūros
                                            </th>
                                            <th>
                                                P/K
                                            </th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for offerTemplatePosition in offerTemplate.offerPositionTemplates %}
                                            <tr>
                                                <div class="center">
                                                    <td><label>{{ offerTemplatePosition.count }}</label></td>
                                                    <td><label>{{ offerTemplatePosition.position.name }}</label></td>
                                                    <td><label>{{ offerTemplatePosition.price }}</label></td>
                                                    <td><label>{{ offerTemplatePosition.position.reach }}</label></td>
                                                    <td><label>{{ offerTemplatePosition.position.divide() }}</label>
                                                    </td>
                                                </div>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                                <form action="/acceptoffer" method="post">
                                    <h3>Jūsų komentaras</h3>
                                    <input type="hidden" value="{{ offer.id }}" name="orderId">
                                    <input type="hidden" value="{{ offer.clientName }}" name="username">
                                    <input type="text" name="msg">
                                    <button class="btn btn-sm btn-success ladda-button" data-style="expand-left"
                                            type="submit"
                                            id="btn-check-offers" name="accept" value="{{ offerTemplate.id }}">
                                        <i class="fa fa-calculator"></i>Patvirtinti pasiūlymą
                                    </button>
                                </form>

                                <div class="col-md-12" style="text-align: center;">
                                    <div class="alert alert-danger error-label"
                                         style="display: none; text-align: center;"
                                         role="alert">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <table class="table" style="margin-left: -25px;">
                                    <thead>
                                    <tr>
                                        <th>
                                            <label class=" font16">
                                                Rezultatai</label>
                                        </th>
                                        <th>
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            <label class=" font16">
                                                Kaina</label>
                                        </td>
                                        <td>
                                            <i class="fa fa-inr font18"></i>
                                        </td>
                                        <td>
                                            <label id="Label3" class="txtTotal font18 alignright">
                                                {{ offerTemplate.price }}
                                            </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="font16">
                                                Perziuros</label>
                                        </td>
                                        <td>
                                            <i class="fa fa-inr font18"></i>
                                        </td>
                                        <td>
                                            <label id="Label4" class="txtDiscount font18 alignright">
                                                {{ offerTemplate.reach }}
                                            </label>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label class="font16">
                                                Peržiūros kaina</label>
                                        </td>
                                        <td>
                                            <i class="fa fa-inr font18"></i>
                                        </td>
                                        <td>
                                            <label id="Label5" class="txtNetPayable font18 alignright">
                                                {{ offerTemplate.divide() }}
                                            </label>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
