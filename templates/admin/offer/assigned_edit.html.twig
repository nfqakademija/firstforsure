        <input type="text" name="msg">
        <footer id="sticky">

            <div class="row">
                <p>Bendra kaina:<span id='moneycount'>000</span></p>
                <p>Numatomos perziuros:<span id='reachcount'>000</span></p>


            </div>
        </footer>


        <center>
            <button class="myButton">Saugoti</button>
        </center>


